
pkgname="ros-orocos-kdl"
pkgver=1.0.2
pkgrel=1
pkgdesc="The Kinematics and Dynamics Library is a framework for modelling and computation of kinematic chains"
arch=('i686' 'x86_64')
url="http://www.orocos.org/kdl"
license=('GPL')
depends=("eigen2" "python2" "python2-sip")
makedepends=("cmake")
source=("http://people.mech.kuleuven.be/~rsmits/kdl/orocos-kdl-$pkgver-src.tar.bz2"
        'orocos-kdl.patch')

md5sums=('4f786fcf415d2db64681ad487c25f419'
         'fd6f014694993644e25e681858263e2e')

build() {
    cd ${srcdir}/kdl-${pkgver}
    patch -p1 < ${srcdir}/orocos-kdl.patch

    mkdir -p ${srcdir}/kdl-${pkgver}/build
	cd ${srcdir}/kdl-${pkgver}/build
	cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DPYTHON_EXECUTABLE=/usr/bin/python2 -DPYTHON_BINDINGS=YES
	make || return 1
}

package() {
	cd ${srcdir}/kdl-${pkgver}/build
	
	make DESTDIR=${pkgdir} install || return 1
}

